<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="1000"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_1000"
            android:onClick="addAmount"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_500"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_50"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="20dp"/>
    <Button
            android:text="500"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_500"
            android:onClick="addAmount"
            app:layout_constraintStart_toEndOf="@+id/button_1000" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_100"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_20"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="100"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_100"
            android:onClick="addAmount"
            app:layout_constraintStart_toEndOf="@+id/button_500" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_10"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"/>
    <Button
            android:text="50"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_50"
            android:onClick="addAmount" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_20"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_1000"
            app:layout_constraintBottom_toTopOf="@+id/button_5"
            />
    <Button
            android:text="20"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_20"
            android:onClick="addAmount" app:layout_constraintStart_toEndOf="@+id/button_50"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_10"

            app:layout_constraintTop_toBottomOf="@+id/button_500"
            app:layout_constraintBottom_toTopOf="@+id/button_2"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="10"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_10"
            android:onClick="addAmount" app:layout_constraintStart_toEndOf="@+id/button_20"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/button_100"
            app:layout_constraintBottom_toTopOf="@+id/button_1" android:layout_marginBottom="16dp"/>
    <Button
            android:text="5"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_5"
            android:onClick="addAmount" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_50"
    />
    <Button
            android:text="1"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_1"
            android:onClick="addAmount" app:layout_constraintStart_toEndOf="@+id/button_2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_10"/>
    <Button
            android:text="2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_2"
            android:onClick="addAmount" app:layout_constraintStart_toEndOf="@+id/button_5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_20"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/sumText" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>